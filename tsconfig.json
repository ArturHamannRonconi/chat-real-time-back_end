{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["app/*"],
      "@appTypes/*": ["@types/appTypes/*"],
      "@config/*": ["config/*"],
      "@errors/*": ["errors/*"],
      "@accounts/*": ["modules/accounts/*"],
      "@utils/*": ["utils/*"]
    },
    "forceConsistentCasingInFileNames": true
  }
}
